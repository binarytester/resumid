<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Summarizer</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
  </head>
  <body>
    <br />
    <div class="container">
      <div class="card">
        <hr />
        <div class="card-header">
          <h2>Novo texto</h2>
        </div>
        <div class="card-body">
          <p id="summary"></p>
        </div>
      </div>
    </div>
    <script src="/js/bootstrap.min.js"></script>
    <script>
      var i = 0;
      var txt = "<%= summarized %>";
      var speed = 30;

      function typeWriter() {
        if (i < txt.length) {
          document.getElementById("summary").innerHTML += txt.charAt(i);
          i++;
          setTimeout(typeWriter, speed);
        }
      }
      typeWriter();
    </script>
  </body>
</html>
